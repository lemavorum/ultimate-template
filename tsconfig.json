{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "jsx": "react",
    "module": "CommonJS", // If CommonJS, webpack won't be able to tree-shake
    "outDir": "./dist",
    "plugins": [{ "name": "typescript-plugin-css-modules" }],
    "preserveConstEnums": true,
    "removeComments": true,
    "sourceMap": true,
    "target": "ES5",
    "strict": true,
  },
  "include": [
    "src/**/*",
  ]
}